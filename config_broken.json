{
  "_COMMENT": "AI-Enhanced PDF Processing System - Standardkonfiguration (sensible Daten in .env)",
  
  "embedding": {
    "model": "embeddinggemma",
    "dimensions": 768,
    "provider": "ollama"
  },
  
  "processing": {
    "use_vision_analysis": true,
    "use_semantic_boundaries": true,
    "chunking_strategy": "intelligent",
    "max_chunk_size": 600,
    "min_chunk_size": 200,
    "chunk_size": 500,
    "chunk_overlap": 100
  },
  
  "ollama": {
    "base_url": "http://localhost:11434",
    "vision_model": "llava:7b",
    "text_model": "llama3.1:8b",
    "embedding_model": "embeddinggemma",
    "parallel_workers": 8,
    "batch_size": 150,
    "use_gpu_acceleration": true,
    "use_metal_acceleration": true,
    "memory_optimization": "unified_memory",
    "performance_boost": "30-50% durch Metal + Neural Engine"
  },
  
  "image_processing": {
    "keep_originals": true,
    "zero_conversion": true,
    "store_original_type": true,
    "validate_integrity": true,
    "description": "Keep all original formats (SVG, PNG, JPG, BMP etc.) without conversion"
  },
  
  "memory": {
    "memory_dir": "MEMORY"
  },
  
  "r2": {
    "region": "auto",
    "_NOTE": "Zugangsdaten werden aus .env Datei geladen"
  },
  
  "documents_path":Â "./Documents"
}